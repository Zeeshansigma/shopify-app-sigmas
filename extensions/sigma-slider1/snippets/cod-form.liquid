{%  style  %} 
.new-div {
    background: rgb(0 0 0 / 50%);
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    display: block !important;
    z-index: 9999;
}
.cross svg{
    width:30px;
    height:30px;
}
.delievery_and_cross {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.cod-form-main {
    width: 100%;
    max-width: 500px;
    margin: 20px auto;
    background-color: white;
}
{% endstyle %}
<div class="cod-form-layer-main">
<div class="cod-form-main">
<div class="delievery_and_cross">
    <h4> CASH ON DELIVERY </h4>
    <div class="cross">
        <svg class="cod_cross" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
