{%  style  %} 
.new-div {
    background: rgb(0 0 0 / 50%);
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    display: block !important;
    z-index: 9999;
}
.cross svg{
    width:30px;
    height:30px;
    cursor:pointer;
}
.delievery_and_cross {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.cod-form-main {
    width: 100%;
    max-width: 500px;
    margin: 20px auto;
    background-color: {{ block.settings.form_bg }};
    padding: 20px;
    border-radius:9px;
}
.shipping_method h5 {
    font-size: 17.64px;
    font-weight: 600;
}
.image_title a {
    font-size: 16px;
    color: {{ block.settings.form_content_color  }};
    font-weight: 600;
    
}
.cod_product_price p {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.form_content_color  }};
}
.shipping_and_total_price {
    background-color: rgb(235, 235, 235);
    padding: 8px 12px 5px;
    border-radius: 6px;
}
.cod_subtotal,
.cod_shipping,
.cod_total_cost {
    display: flex;
    justify-content: space-between;
}
.cod_subtotal p,
.cod_shipping p,
.cod_total_cost p{
margin:0;
font-size:15.96px;
color: {{ block.settings.form_content_color  }};
}
.bold{
    font-weight:600;
}
.cod_total_cost {
    border-top: 1px solid #c7c7c7;
    margin-top: 6px;
    padding-top: 5px;
}
.total_price_cod{
    font-size: 19.32px !important;
}
.cod_sign{
    width: 18px;
    border: 1px solid silver;
    height: 18px;
    display: block !important;
    border-radius: 50%;
    position: relative;
}
.cod_sign::before{
    content: "";
    width: 12px;
    height: 12px;
    background-color: #000;
    position: absolute;
    border-radius: 50%;
    top: 2px;
    left: 2px;
}
.free_shipping_bar {
    border: 1px solid silver;
    border-radius: 6px;
    display: flex;
    justify-content: space-between;
    min-height: 47px;
    align-items: center;
    padding: 0px 15px;
}
.cod_right {
    display: flex;
    align-items: center;
    column-gap: 18px;
}
.cod_left p {
    margin: 0;
    color: {{ block.settings.form_content_color  }};
}
.cod_free_shipping p {
    margin: 0;
    color: {{ block.settings.form_content_color  }};
}
.value_cod input {
