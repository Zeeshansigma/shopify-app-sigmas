.cod_complete_btn button{
    width: 100%;
    background-color: {{ block.settings.form_btn_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 10px 0;
    border-radius: 5px;
}
.cod_complete_btn button p{
    color: {{ block.settings.form_btn_color_text }};
}
